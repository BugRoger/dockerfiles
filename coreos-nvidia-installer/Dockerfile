ARG COREOS_VERSION=1576.5.0
ARG DRIVER_VERSION=384.111

FROM bugroger/coreos-nvidia-driver:${COREOS_VERSION}-${DRIVER_VERSION}
LABEL maintainer "Michael Schmidt <michael.j.schmidt@gmail.com>"

ARG COREOS_VERSION
ARG DRIVER_VERSION

COPY run.sh /
COPY install.sh /

ENV COREOS_VERSION $COREOS_VERSION
ENV DRIVER_VERSION $DRIVER_VERSION

ENTRYPOINT ["/run.sh"]
